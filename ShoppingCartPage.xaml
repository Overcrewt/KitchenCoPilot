<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitchenCoPilot.ShoppingCartPage">

    <StackLayout Padding="10">
        <Label Text="Shopping Cart" FontSize="24" HorizontalOptions="Center" />

        <ScrollView>
            <CollectionView ItemsSource="{Binding Ingredients}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10" BorderColor="LightGray" CornerRadius="5">
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <CheckBox IsChecked="{Binding IsSelected}" VerticalOptions="Center" />
                                <Label Text="{Binding Name}" VerticalOptions="Center" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <Button Text="Save Cart" Clicked="OnSaveCartButtonClicked" HorizontalOptions="Center" VerticalOptions="End" Margin="10"/>
    </StackLayout>
</ContentPage>