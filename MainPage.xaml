<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitchenCoPilot.MainPage"
             BackgroundImageSource="foodbackground.jpeg">

    <Grid>
        <!-- Define the rows and columns for the grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- This row takes up the remaining space -->
            <RowDefinition Height="Auto" />
            <!-- This row sizes itself to the content -->
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center">
            <Button Text="Tap to search for recipes or try something new!"
                    FontSize="24"
                    Clicked="OnSearchButtonClicked"
                    BackgroundColor="Maroon"
                    BorderColor="AliceBlue"
                    TextColor="Goldenrod"/>
        </StackLayout>

        <Button Grid.Row="1" Text="Feedback" 
                Clicked="OnFeedbackButtonClicked" 
                VerticalOptions="End" 
                HorizontalOptions="Center" 
                BackgroundColor="Maroon"
                BorderColor="AliceBlue"
                TextColor="Goldenrod"/>
    </Grid>
</ContentPage>