<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitchenCoPilot.GroceryListPage"
             Title="Grocery List">
    <StackLayout>
        <Label Text="Grocery List" FontSize="Large" HorizontalOptions="Center" />
        <ListView x:Name="GroceryListView" ItemsSource="{Binding Ingredients}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Quantity}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
